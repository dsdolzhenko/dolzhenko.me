---
layout: layout.liquid
---
<article class="content">
  {% render "header", title: title, date: page.date, site: site %}

  {% if pictures %}
  <ul class="pictures">
  {% for picture in pictures %}
     <li class="{% if picture.vertical %}vertical{% else %}horizontal{% endif %} {{ picture.position | default: "center" }}">
     <a href="{{ picture.path }}">
       {% image picture.path, picture.alt %}
     </a>
     </li>
  {% endfor %}
  </ul>
  {% endif %}

  {{ content }}
</article>

<p>
  <a href="mailto:{{ site.author.email }}?subject={{ title | escape }}">Reply to this post by email</a>
</p>
